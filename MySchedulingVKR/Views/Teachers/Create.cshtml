@model MySchedulingVKR.Models.Teacher

@{
    ViewData["Title"] = "Create";
}

<div style="margin-left: 50px;">
    <h1>Добавление преподавателя</h1>

    <h4>Преподаватель</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label">Логин</label>
                    <input asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span><br />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Пароль</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span><br />
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Имя</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span><br />
                </div>
                <div class="form-group">
                    <label asp-for="Surname" class="control-label">Фамилия</label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span><br />
                </div>
                <div class="form-group">
                    <label asp-for="SubjectId" class="control-label">Предмет</label>
                    <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectName"></select>

                    <input type="hidden" name="OrganizationId" value="@Model.OrganizationId" />
                </div>
                <div class="form-group">
                    <br /><input style="font-size: 16px;" type="submit" value="Добавить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
