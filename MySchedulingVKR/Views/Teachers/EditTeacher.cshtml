@model MySchedulingVKR.Models.Teacher

@{
    ViewData["Title"] = "EditTeacher";
}
<style>
    .first {
        margin-left: 50px;
    }

    input {
        font-size: 16px;
    }
</style>

<div class="first">
    <h1>Внести изменения об информации преподавателя</h1>

    <h4>Преподаватель</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditTeacher">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Login" class="control-label">Логин</label>
                    <input asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span><br />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Пароль</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span><br />
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Имя</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span><br />
                </div>
                <div class="form-group">
                    <label asp-for="Surname" class="control-label">Фамилия</label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span><br />
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="OrganizationId" />
                    <input type="hidden" asp-for="SubjectId" />
                </div>
                <div class="form-group">
                    <br /><input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

