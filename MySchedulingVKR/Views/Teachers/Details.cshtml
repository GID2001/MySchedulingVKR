@model MySchedulingVKR.Models.Teacher

@{
    ViewData["Title"] = "Details";
}
<div style="margin-left: 50px;">
    <h1>Информация о преподавателе</h1>

    <div>
        <h4>Преподаватель</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Логин
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Login)
            </dd>
            <dt class="col-sm-2">
                Пароль
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Password)
            </dd>
            <dt class="col-sm-2">
                Имя
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Фамилия
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Surname)
            </dd>
            <dt class="col-sm-2">
                Название организации
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Organization.Name)
            </dd>
            <dt class="col-sm-2">
                Предмет
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Subject.Name)
            </dd>
        </dl>
    </div>
</div>
