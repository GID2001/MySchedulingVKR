@model MySchedulingVKR.Models.Lesson

@{
    ViewData["Title"] = "Edit";
}

<style>
    .first {
        margin-left: 50px;
    }

    input {
        font-size: 16px;
    }
</style>

<div class="first">
    <h1>Редактирование</h1>

    <h4>Занятие</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="DayOfTheWeek" class="control-label">День недели</label>
                    <input asp-for="DayOfTheWeek" class="form-control" />
                    <span asp-validation-for="DayOfTheWeek" class="text-danger"></span><br />
                </div>
                <div class="form-group">
                    <label asp-for="Time" class="control-label">Время</label>
                    <input asp-for="Time" class="form-control" />
                    <span asp-validation-for="Time" class="text-danger"></span><br />
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label">Дата</label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span><br />
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
